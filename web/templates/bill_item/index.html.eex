<h2>Listing bill items</h2>

<table class="table">
  <thead>
    <tr>
      <th>Bill</th>
      <th>Description</th>
      <th>Amount</th>

      <th></th>
    </tr>
  </thead>
  <tbody>
<%= for bill_item <- @bill_items do %>
    <tr>
      <td><%= bill_item.bill_id %></td>
      <td><%= bill_item.description %></td>
      <td><%= bill_item.amount %></td>

      <td class="text-right">
        <%= link "Show", to: bill_item_path(@conn, :show, bill_item), class: "btn btn-default btn-xs" %>
        <%= link "Edit", to: bill_item_path(@conn, :edit, bill_item), class: "btn btn-default btn-xs" %>
        <%= link "Delete", to: bill_item_path(@conn, :delete, bill_item), method: :delete, data: [confirm: "Are you sure?"], class: "btn btn-danger btn-xs" %>
      </td>
    </tr>
<% end %>
  </tbody>
</table>

<%= link "New bill item", to: bill_item_path(@conn, :new) %>
